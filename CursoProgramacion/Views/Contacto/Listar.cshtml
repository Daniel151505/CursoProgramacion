@model IEnumerable<CursoProgramacion.Models.Contacto>

@{
    ViewData["Title"] = "Listar Contactos";
}
<h1 style="text-align:center;">Listar Contactos</h1>

<p> <a asp-action="Index">Inscripci√≥n de formulario</a> </p>

<table class="table table-hover" style="text-align: center;">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
      <th scope="col">@Html.DisplayNameFor(model => model.LastName)</th>
      <th scope="col">@Html.DisplayNameFor(model => model.Number)</th>
    </tr>
  </thead>
  <tbody>
   
   @foreach (var item in Model)
   {

    <tr >
      <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
      <td>@Html.DisplayFor(modelItem => item.Name)</td>
      <td>@Html.DisplayFor(modelItem => item.LastName)</td>
      <td>@Html.DisplayFor(modelItem => item.Number)</td>
    </tr>
       
   }
  </tbody>
</table>
